.container{
  padding: 0;
  background-color: #efefef;
  height: 100vh;
}
/* 购物车为空时 */
.empty{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty .cart_icon{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 190rpx;
  height: 190rpx;
  margin-top: 100rpx;
  border-radius: 50%;
  background: #d6d6d6;
}
.cart_icon image{
  width: 80rpx;
  height: 80rpx;
}
.button{
  width: 660rpx;
  letter-spacing: 4rpx;
}
.button,.prompt{
  margin-top: 80rpx;
  color: #000;
  font-size: 16px;
}
.button text{
  letter-spacing: 4rpx;
  color: #fff;
}
/* 购物车有值时 */
.mt{
  margin-top: 20rpx;
}
.box{
  margin-top: 2rpx;
  height: 160rpx;
  background-color: #fff;
  width: 750rpx;
  display: flex;
}
.icon{
  height: 160rpx;
  width: 60rpx;
}
.icon .i{
  padding: 60rpx 20rpx;
}
.icon .i1{
  padding: 50rpx 20rpx;
}
.box .navi{
  width: 120rpx;
  height: 160rpx;
}
.navi image{
  padding: 20rpx 0;
  width: 120rpx;
  height: 120rpx;
}
.box .title{
  font-size: 12px;
  color: #000;
  line-height: 160rpx;
  width: 400rpx;
}
.box .num{
  color: #9c9c9c;
  font-size: 12px;
  line-height: 160rpx;
  width: 40rpx;
}
.box .price{
  color: #ff6700;
  font-size: 14px;
  line-height: 160rpx;
  width: 130rpx;
}

/* 计算总价 */
.submit_title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
}
.all{
  height: 100rpx;
  width: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 12pt;
}
.allprice{
  height: 100rpx;
  width: 350rpx;
  line-height: 100rpx;
  padding-left: 150rpx;
}
.allprice text{
  font-size: 12pt;
  color: #000;
}
.allprice .totalprice{
  color: #ff6700;
}
.submit{
  width: 240rpx;
  height: 100rpx;
  font-size: 14pt;
  color: #fff;
  background: #ff6700;
  text-align: center;
}