.section.block{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.section.cover{
  display: inline-block;
  height: 440rpx;
  margin-top: -4rpx;
}
.goods-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  margin-top: 0rpx;
  background: #fff;
}
.goods-item{
  width: 360rpx;
  margin-bottom: 30rpx;
}
.goods-item .goods-img{
  position: relative;
  width: 375rpx;
  height: 360rpx;
  box-shadow: 0 0 6rpx #dcdcdc;
}
.goods-item text{
  line-height: 40rpx;
  word-spacing: 10rpx;
}
.goods-item text:nth-child(1),.goods-item text:nth-child(2),.goods-item text:nth-child(3){
  display: block;
  margin-left: 30rpx;
}
.goods-item .title{
  font-size: 11pt;
}
.goods-item .detial{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 12px;
  color: #c0c0c0;
}
.goods-item .price{
  margin-left: 30rpx;
  font-size: 16px;
  color: #ff4a00;
}
/* 折扣 */
.goods-item .discount{
  display: inline-block;
  margin-left: 10rpx;
  font-size: 9pt;
  color: #666;
  text-decoration: line-through;
}
